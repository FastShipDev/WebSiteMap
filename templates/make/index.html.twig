{% extends 'base.html.twig' %}

{% block title %}FastShip - Packages & Travels{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5 bg-dark text-white">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <header class="mb-5 text-center">
                <h1 class="display-4 fw-bold">FastShip</h1>
                <p class="lead">Connectez vos voyages et vos colis</p>
            </header>

            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fs-1">Colis disponibles</h2>
                    <a href="https://fast-ship.vercel.app" class="btn btn-outline-light">+ Négocier un envoi</a>
                </div>
                
                <div class="row g-4">
                    {% for package in packages %}
                        <div class="col-md-4">
                            <div class="card h-100 bg-dark text-white border border-secondary">
                                {% if package.photoUrl %}
                                    <img src="{{ package.photoUrl }}" class="card-img-top" alt="Photo du colis">
                                {% endif %}
                                <div class="card-body">
                                    <h3 class="card-title fs-4">{{ package.type }}</h3>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>{{ package.weight }} kg</span>
                                        <span>{{ package.initialPrice }}€</span>
                                    </div>
                                    <p class="card-text mb-4">
                                        <span class="d-block">Taille: {{ package.size }}</span>
                                        <span class="d-block text-light">Livraison avant: {{ package.maxDeliveryDate|date('d/m/Y') }}</span>
                                    </p>
                                    <div class="d-flex align-items-center">
                                        <div class="ratings me-2">
                                            {% for i in 1..5 %}
                                                {% if i <= package.user.averageRating %}
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                {% else %}
                                                    <i class="bi bi-star text-warning"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <span class="small text-muted">({{ package.user.totalRatings }})</span>
                                    </div>
                                    <a href="https://fast-ship.vercel.app" class="btn btn-outline-light w-100 mt-3">Négocier</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>

            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fs-1">Voyages disponibles</h2>
                    <a href="https://fast-ship.vercel.app" class="btn btn-outline-light">+ Notifier un utilisateur</a>
                </div>
                
                <div class="row g-4">
                    {% for travel in travels %}
                        <div class="col-md-4">
                            <div class="card h-100 bg-dark text-white border border-secondary">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="transport-icon me-3">
                                            {% if travel.typeTransport == 'Avion' %}
                                                <i class="bi bi-airplane fs-1"></i>
                                            {% elseif travel.typeTransport == 'Train' %}
                                                <i class="bi bi-train-front fs-1"></i>
                                            {% elseif travel.typeTransport == 'Voiture' %}
                                                <i class="bi bi-car-front fs-1"></i>
                                            {% elseif travel.typeTransport == 'Bus' %}
                                                <i class="bi bi-bus-front fs-1"></i>
                                            {% else %}
                                                <i class="bi bi-box-seam fs-1"></i>
                                            {% endif %}
                                        </div>
                                        <h3 class="card-title fs-4 mb-0">{{ travel.typeTransport }}</h3>
                                    </div>
                                    
                                    <div class="journey mb-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="fs-5 fw-bold">{{ travel.startCity }}</div>
                                                <div class="small text-muted">{{ travel.dateTravel|date('d/m/Y') }}</div>
                                                <div class="small text-muted">{{ travel.dateTravel|date('H:i') }}</div>
                                            </div>
                                            <div class="journey-line flex-grow-1 mx-3 position-relative">
                                                <div class="border-top border-secondary"></div>
                                                <i class="bi bi-arrow-right position-absolute top-50 start-50 translate-middle"></i>
                                            </div>
                                            <div>
                                                <div class="fs-5 fw-bold">{{ travel.destinationCity }}</div>
                                                <div class="small text-muted">{{ travel.arrivalDate|date('d/m/Y') }}</div>
                                                <div class="small text-muted">{{ travel.arrivalDate|date('H:i') }}</div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="ratings me-2">
                                            {% for i in 1..5 %}
                                                {% if i <= travel.user.averageRating %}
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                {% else %}
                                                    <i class="bi bi-star text-warning"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <span class="small text-muted">({{ travel.user.totalRatings }})</span>
                                    </div>
                                    
                                    <a href="https://fast-ship.vercel.app" class="btn btn-outline-light w-100">Contacter</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
    
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 8px;
        overflow: hidden;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(255, 255, 255, 0.1);
    }
    
    .journey-line {
        height: 2px;
    }
    
    .btn-outline-light {
        border-radius: 4px;
        padding: 8px 16px;
        transition: all 0.3s;
    }
    
    .btn-outline-light:hover {
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
    }
    
    .container-fluid {
        max-width: 1400px;
    }
</style>
{% endblock %}